{
  "$defs": {
    "File": {
      "$id": "/schemas/File",
      "oneOf": [
        {
          "description": "A class representing a file in the inference.sh ecosystem.",
          "properties": {
            "uri": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Uri"
            },
            "path": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Path"
            },
            "content_type": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Content Type"
            },
            "size": {
              "anyOf": [
                {
                  "type": "integer"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Size"
            },
            "filename": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Filename"
            }
          },
          "title": "File",
          "type": "object"
        },
        {
          "type": "string"
        }
      ]
    },
    "ModelEnum": {
      "description": "Model options for Topaz image enhancement.",
      "enum": [
        "Low Resolution V2",
        "Standard V2",
        "CGI",
        "High Fidelity V2",
        "Text Refine",
        "Recovery",
        "Redefine",
        "Recovery V2"
      ],
      "title": "ModelEnum",
      "type": "string"
    },
    "OutputFormatEnum": {
      "description": "Output format options.",
      "enum": [
        "jpeg",
        "png"
      ],
      "title": "OutputFormatEnum",
      "type": "string"
    },
    "SubjectDetectionEnum": {
      "description": "Subject detection mode options.",
      "enum": [
        "All",
        "Foreground",
        "Background"
      ],
      "title": "SubjectDetectionEnum",
      "type": "string"
    }
  },
  "properties": {
    "image": {
      "$ref": "#/$defs/File",
      "description": "Input image file to be upscaled and enhanced"
    },
    "model": {
      "$ref": "#/$defs/ModelEnum",
      "default": "Standard V2",
      "description": "Model to use for image enhancement"
    },
    "upscale_factor": {
      "default": 2.0,
      "description": "Factor to upscale the image by (e.g. 2.0 doubles width and height)",
      "maximum": 4.0,
      "minimum": 1.0,
      "title": "Upscale Factor",
      "type": "number"
    },
    "crop_to_fill": {
      "default": false,
      "description": "Whether to crop the image to fill the output dimensions",
      "title": "Crop To Fill",
      "type": "boolean"
    },
    "output_format": {
      "$ref": "#/$defs/OutputFormatEnum",
      "default": "jpeg",
      "description": "Output format of the upscaled image"
    },
    "subject_detection": {
      "$ref": "#/$defs/SubjectDetectionEnum",
      "default": "All",
      "description": "Subject detection mode for the image enhancement"
    },
    "face_enhancement": {
      "default": true,
      "description": "Whether to apply face enhancement to the image",
      "title": "Face Enhancement",
      "type": "boolean"
    },
    "face_enhancement_creativity": {
      "default": 0.0,
      "description": "Creativity level for face enhancement. 0.0 means no creativity, 1.0 means maximum creativity. Ignored if face enhancement is disabled.",
      "maximum": 1.0,
      "minimum": 0.0,
      "title": "Face Enhancement Creativity",
      "type": "number"
    },
    "face_enhancement_strength": {
      "default": 0.8,
      "description": "Strength of the face enhancement. 0.0 means no enhancement, 1.0 means maximum enhancement. Ignored if face enhancement is disabled.",
      "maximum": 1.0,
      "minimum": 0.0,
      "title": "Face Enhancement Strength",
      "type": "number"
    }
  },
  "required": [
    "image"
  ],
  "title": "AppInput",
  "type": "object"
}