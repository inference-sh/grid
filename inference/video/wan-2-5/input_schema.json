{
  "$defs": {
    "File": {
      "$id": "/schemas/File",
      "oneOf": [
        {
          "description": "A class representing a file in the inference.sh ecosystem.",
          "properties": {
            "uri": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Uri"
            },
            "path": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Path"
            },
            "content_type": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Content Type"
            },
            "size": {
              "anyOf": [
                {
                  "type": "integer"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Size"
            },
            "filename": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Filename"
            }
          },
          "title": "File",
          "type": "object"
        },
        {
          "type": "string"
        }
      ]
    },
    "ResolutionEnum": {
      "description": "Video resolution options.",
      "enum": [
        "480p",
        "720p",
        "1080p"
      ],
      "title": "ResolutionEnum",
      "type": "string"
    }
  },
  "properties": {
    "prompt": {
      "description": "The text prompt describing the desired video motion. Max 800 characters.",
      "maxLength": 800,
      "title": "Prompt",
      "type": "string"
    },
    "image": {
      "$ref": "#/$defs/File",
      "description": "Image file to use as the first frame. Supported formats: JPEG, PNG, WebP"
    },
    "audio": {
      "anyOf": [
        {
          "$ref": "#/$defs/File"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Optional audio file to use as background music. Supported formats: WAV, MP3. Duration: 3-30s, max 15MB. Audio will be truncated if longer than video duration."
    },
    "resolution": {
      "$ref": "#/$defs/ResolutionEnum",
      "default": "1080p",
      "description": "Video resolution. Higher resolutions provide better quality but take longer to generate."
    },
    "negative_prompt": {
      "anyOf": [
        {
          "maxLength": 500,
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Negative prompt to describe content to avoid. Max 500 characters.",
      "title": "Negative Prompt"
    },
    "enable_prompt_expansion": {
      "default": true,
      "description": "Whether to enable prompt rewriting using LLM for better results.",
      "title": "Enable Prompt Expansion",
      "type": "boolean"
    },
    "seed": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Random seed for reproducibility. If None, a random seed is chosen.",
      "title": "Seed"
    },
    "fal_api_key": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "fal.ai API key. If not provided, will look for FAL_KEY environment variable.",
      "title": "Fal Api Key"
    }
  },
  "required": [
    "prompt",
    "image"
  ],
  "title": "AppInput",
  "type": "object"
}