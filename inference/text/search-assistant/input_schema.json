{
  "description": "Input schema for the research assistant.",
  "properties": {
    "query": {
      "description": "Research query or question to investigate",
      "title": "Query",
      "type": "string"
    },
    "system_prompt": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Optional custom system prompt for research context",
      "title": "System Prompt"
    },
    "model": {
      "default": "gpt-4o-mini",
      "description": "Model to use for research",
      "enum": [
        "gpt-4o-mini",
        "gpt-4o",
        "gpt-4-turbo",
        "gpt-4",
        "gpt-3.5-turbo",
        "gpt-4o-2024-08-06",
        "gpt-4o-2024-05-13",
        "o1-mini",
        "o1-preview",
        "o3-mini",
        "chatgpt-4o-latest"
      ],
      "title": "Model",
      "type": "string"
    },
    "temperature": {
      "default": 0.1,
      "description": "Temperature for response randomness (0.0-2.0)",
      "maximum": 2.0,
      "minimum": 0.0,
      "title": "Temperature",
      "type": "number"
    },
    "max_tokens": {
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Maximum tokens in response (optional)",
      "title": "Max Tokens"
    },
    "top_p": {
      "default": 1.0,
      "description": "Top-p sampling parameter (0.0-1.0)",
      "maximum": 1.0,
      "minimum": 0.0,
      "title": "Top P",
      "type": "number"
    },
    "frequency_penalty": {
      "default": 0.0,
      "description": "Frequency penalty (-2.0 to 2.0)",
      "maximum": 2.0,
      "minimum": -2.0,
      "title": "Frequency Penalty",
      "type": "number"
    },
    "presence_penalty": {
      "default": 0.0,
      "description": "Presence penalty (-2.0 to 2.0)",
      "maximum": 2.0,
      "minimum": -2.0,
      "title": "Presence Penalty",
      "type": "number"
    },
    "reasoning_effort": {
      "anyOf": [
        {
          "enum": [
            "minimal",
            "low",
            "medium",
            "high"
          ],
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Reasoning effort level for research analysis (optional, only for supported models)",
      "title": "Reasoning Effort"
    }
  },
  "required": [
    "query"
  ],
  "title": "AppInput",
  "type": "object"
}