{
  "$defs": {
    "ContextMessage": {
      "properties": {
        "role": {
          "$ref": "#/$defs/ContextMessageRole",
          "description": "the role of the message. user, assistant, or system"
        },
        "text": {
          "description": "the text content of the message",
          "title": "Text",
          "type": "string"
        },
        "image": {
          "anyOf": [
            {
              "$ref": "#/$defs/File"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "the image file of the message"
        },
        "tool_calls": {
          "anyOf": [
            {
              "items": {
                "additionalProperties": true,
                "type": "object"
              },
              "type": "array"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "the tool calls of the message",
          "title": "Tool Calls"
        },
        "tool_call_id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "the tool call id for tool role messages",
          "title": "Tool Call Id"
        }
      },
      "required": [
        "role",
        "text"
      ],
      "title": "ContextMessage",
      "type": "object"
    },
    "ContextMessageRole": {
      "enum": [
        "user",
        "assistant",
        "system",
        "tool"
      ],
      "title": "ContextMessageRole",
      "type": "string"
    },
    "File": {
      "$id": "/schemas/File",
      "oneOf": [
        {
          "description": "A class representing a file in the inference.sh ecosystem.",
          "properties": {
            "uri": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Uri"
            },
            "path": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Path"
            },
            "content_type": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Content Type"
            },
            "size": {
              "anyOf": [
                {
                  "type": "integer"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Size"
            },
            "filename": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Filename"
            }
          },
          "title": "File",
          "type": "object"
        },
        {
          "type": "string"
        }
      ]
    }
  },
  "description": "Mistral Small 3.2 24B IT 2506 input model with image and tools support.",
  "properties": {
    "system_prompt": {
      "default": "A user will ask you to solve a task. You should first draft your thinking process (inner monologue) until you have derived the final answer. Afterwards, write a self-contained summary of your thoughts (i.e. your summary should be succinct but contain all the critical steps you needed to reach the conclusion). You should use Markdown and Latex to format your response. Write both your thoughts and summary in the same language as the task posed by the user.\n\nYour thinking process must follow the template below:\n<think>\nYour thoughts or/and draft, like working through an exercise on scratch paper. Be as casual and as long as you want until you are confident to generate a correct answer.\n</think>\n\nHere, provide a concise summary that reflects your reasoning and presents a clear final answer to the user.\n\nProblem:",
      "description": "The system prompt to use for the model",
      "title": "System Prompt",
      "type": "string"
    },
    "reasoning": {
      "default": false,
      "description": "enable step-by-step reasoning",
      "title": "Reasoning",
      "type": "boolean"
    },
    "tools": {
      "anyOf": [
        {
          "items": {
            "additionalProperties": true,
            "type": "object"
          },
          "type": "array"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "tool definitions for function calling",
      "title": "Tools"
    },
    "tool_call_id": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "the tool call id for tool role messages",
      "title": "Tool Call Id"
    },
    "image": {
      "anyOf": [
        {
          "$ref": "#/$defs/File"
        },
        {
          "type": "null"
        }
      ],
      "contentMediaType": "image/*",
      "default": null,
      "description": "the image to use for the model"
    },
    "context": {
      "default": [],
      "description": "the context to use for the model",
      "examples": [
        [
          {
            "content": [
              {
                "text": "What is the capital of France?",
                "type": "text"
              }
            ],
            "role": "user"
          },
          {
            "content": [
              {
                "text": "The capital of France is Paris.",
                "type": "text"
              }
            ],
            "role": "assistant"
          }
        ]
      ],
      "items": {
        "$ref": "#/$defs/ContextMessage"
      },
      "title": "Context",
      "type": "array"
    },
    "role": {
      "$ref": "#/$defs/ContextMessageRole",
      "default": "user",
      "description": "the role of the input text"
    },
    "text": {
      "description": "the input text to use for the model",
      "examples": [
        "write a haiku about artificial general intelligence"
      ],
      "title": "Text",
      "type": "string"
    },
    "temperature": {
      "default": 0.7,
      "maximum": 1.0,
      "minimum": 0.0,
      "title": "Temperature",
      "type": "number"
    },
    "top_p": {
      "default": 0.95,
      "maximum": 1.0,
      "minimum": 0.0,
      "title": "Top P",
      "type": "number"
    },
    "context_size": {
      "default": 4096,
      "title": "Context Size",
      "type": "integer"
    }
  },
  "required": [
    "text"
  ],
  "title": "LLMInput",
  "type": "object"
}