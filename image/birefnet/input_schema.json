{
  "$defs": {
    "File": {
      "$id": "/schemas/File",
      "oneOf": [
        {
          "description": "A class representing a file in the inference.sh ecosystem.",
          "properties": {
            "uri": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Uri"
            },
            "path": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Path"
            },
            "content_type": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Content Type"
            },
            "size": {
              "anyOf": [
                {
                  "type": "integer"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Size"
            },
            "filename": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Filename"
            }
          },
          "title": "File",
          "type": "object"
        },
        {
          "type": "string"
        }
      ]
    }
  },
  "properties": {
    "image": {
      "$ref": "#/$defs/File",
      "description": "Input image file for background removal",
      "example": "path/to/image.jpg"
    },
    "return_mask": {
      "default": false,
      "description": "Whether to use the matting model to return a mask (True) or the normal model for binary mask (False)",
      "example": false,
      "title": "Return Mask",
      "type": "boolean"
    },
    "fill_background": {
      "default": false,
      "description": "Fill the background with a solid color instead of returning transparency",
      "example": false,
      "title": "Fill Background",
      "type": "boolean"
    },
    "background_color": {
      "default": "#FFFFFFFF",
      "description": "Background color to use when fill_background is True",
      "example": "#FFFFFFFF",
      "format": "color",
      "title": "Background Color",
      "type": "string"
    }
  },
  "required": [
    "image"
  ],
  "title": "AppInput",
  "type": "object"
}