{
  "$defs": {
    "File": {
      "$id": "/schemas/File",
      "oneOf": [
        {
          "description": "A class representing a file in the inference.sh ecosystem.",
          "properties": {
            "uri": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Uri"
            },
            "path": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Path"
            },
            "content_type": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Content Type"
            },
            "size": {
              "anyOf": [
                {
                  "type": "integer"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Size"
            },
            "filename": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "default": null,
              "title": "Filename"
            }
          },
          "title": "File",
          "type": "object"
        },
        {
          "type": "string"
        }
      ]
    },
    "OutputFormatEnum": {
      "description": "Output format options.",
      "enum": [
        "png",
        "jpeg",
        "webp"
      ],
      "title": "OutputFormatEnum",
      "type": "string"
    }
  },
  "properties": {
    "prompt": {
      "description": "The text description of how to edit the provided image. Example: 'Give him a friend'",
      "title": "Prompt",
      "type": "string"
    },
    "image": {
      "$ref": "#/$defs/File",
      "description": "The reference image to edit. Supported formats: PNG, JPEG, WebP, AVIF, and HEIF."
    },
    "output_format": {
      "$ref": "#/$defs/OutputFormatEnum",
      "default": "png",
      "description": "Output format for the generated image. Default: png"
    },
    "sync_mode": {
      "default": false,
      "description": "If True, the media will be returned as a data URI and the output data won't be available in the request history.",
      "title": "Sync Mode",
      "type": "boolean"
    }
  },
  "required": [
    "prompt",
    "image"
  ],
  "title": "AppInput",
  "type": "object"
}